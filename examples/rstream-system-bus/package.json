{
	"name": "@example/rstream-system-bus",
	"version": "0.0.1",
	"private": true,
	"description": "Declarative component-based system with central rstream-based pubsub event bus",
	"repository": "https://github.com/thi-ng/umbrella",
	"author": "Karsten Schmidt <k+npm@thi.ng>",
	"license": "Apache-2.0",
	"scripts": {
		"start": "yarn css:build && yarn start:only",
		"start:only": "vite --host --open",
		"css:gen": "../../node_modules/.bin/metacss generate --out css/framework.json ../../packages/meta-css/specs/*.mcss.json css/*.mcss.json",
		"css:watch": "yarn css:gen && ../../node_modules/.bin/metacss convert --bundle --watch --pretty --out css/style.css --specs css/framework.json --force @css/includes.txt css/*.mcss",
		"css:build": "yarn css:gen && ../../node_modules/.bin/metacss convert --bundle --out css/style.css --specs css/framework.json --force @css/includes.txt css/*.mcss",
		"build": "yarn css:build && tsc && vite build --base='./'",
		"preview": "vite preview --host --open"
	},
	"devDependencies": {
		"@thi.ng/meta-css": "workspace:^",
		"typescript": "^5.3.3",
		"vite": "^5.1.1"
	},
	"dependencies": {
		"@thi.ng/api": "workspace:^",
		"@thi.ng/atom": "workspace:^",
		"@thi.ng/dgraph-dot": "workspace:^",
		"@thi.ng/hiccup-carbon-icons": "workspace:^",
		"@thi.ng/hiccup-html": "workspace:^",
		"@thi.ng/logger": "workspace:^",
		"@thi.ng/paths": "workspace:^",
		"@thi.ng/rdom": "workspace:^",
		"@thi.ng/rstream": "workspace:^",
		"@thi.ng/system": "workspace:^",
		"@thi.ng/transducers": "workspace:^"
	},
	"browser": {
		"process": false
	},
	"thi.ng": {
		"readme": [
			"atom",
			"dgraph-dot",
			"hiccup-carbon-icons",
			"hiccup-html",
			"logger",
			"paths",
			"rdom",
			"rstream",
			"system"
		],
		"screenshot": "examples/rstream-system-bus.png"
	}
}
