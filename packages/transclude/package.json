{
	"name": "@thi.ng/transclude",
	"version": "0.1.49",
	"description": "Extensible functional template engine for text document generation, incl. various high-level Markdown features",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/thi-ng/umbrella.git"
	},
	"homepage": "https://github.com/thi-ng/umbrella/tree/develop/packages/transclude#readme",
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/postspectacular"
		},
		{
			"type": "patreon",
			"url": "https://patreon.com/thing_umbrella"
		}
	],
	"author": "Karsten Schmidt (https://thi.ng)",
	"license": "Apache-2.0",
	"scripts": {
		"build": "yarn clean && tsc --declaration",
		"clean": "rimraf --glob '*.js' '*.d.ts' '*.map' doc tpl",
		"doc": "typedoc --excludePrivate --excludeInternal --out doc src/index.ts",
		"doc:ae": "mkdir -p .ae/doc .ae/temp && api-extractor run --local --verbose",
		"doc:readme": "bun ../../tools/src/module-stats.ts && bun ../../tools/src/readme.ts",
		"pub": "yarn npm publish --access public",
		"test": "testament test"
	},
	"dependencies": {
		"@thi.ng/api": "^8.9.9",
		"@thi.ng/checks": "^3.4.9",
		"@thi.ng/file-io": "^1.0.2",
		"@thi.ng/logger": "^2.0.0",
		"@thi.ng/strings": "^3.7.0",
		"@thi.ng/transducers": "^8.8.12"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.38.3",
		"@thi.ng/testament": "^0.4.2",
		"rimraf": "^5.0.5",
		"tools": "workspace:^",
		"typedoc": "^0.25.4",
		"typescript": "^5.3.2"
	},
	"keywords": [
		"engine",
		"functional",
		"generator",
		"json",
		"markdown",
		"nodejs",
		"no-browser",
		"npm",
		"template",
		"text",
		"typescript"
	],
	"publishConfig": {
		"access": "public"
	},
	"browser": {
		"process": false,
		"setTimeout": false
	},
	"engines": {
		"node": ">=14"
	},
	"files": [
		"./*.js",
		"./*.d.ts",
		"tpl"
	],
	"exports": {
		".": {
			"default": "./index.js"
		},
		"./api": {
			"default": "./api.js"
		},
		"./tpl/file": {
			"default": "./tpl/file.js"
		},
		"./tpl/markdown": {
			"default": "./tpl/markdown.js"
		},
		"./tpl/pkg": {
			"default": "./tpl/pkg.js"
		},
		"./tpl/whitespace": {
			"default": "./tpl/whitespace.js"
		},
		"./transclude": {
			"default": "./transclude.js"
		}
	},
	"thi.ng": {
		"related": [
			"hiccup-markdown",
			"markdown-table",
			"tangle"
		],
		"status": "alpha",
		"year": 2022
	}
}
