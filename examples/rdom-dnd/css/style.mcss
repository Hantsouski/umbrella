body { sans-serif ma3 }
svg { fill-current }
a { black }

#app { mb3 }

// drop zone styles 
#bank1 .dropzone { bg-dark-red { [data-active=true] { bg-orange } } }
#bank2 .dropzone { bg-blue { [data-active=true] { bg-light-blue } } }
