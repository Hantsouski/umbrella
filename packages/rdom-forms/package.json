{
	"name": "@thi.ng/rdom-forms",
	"version": "0.2.4",
	"description": "Data-driven declarative & extensible HTML form generation",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/thi-ng/umbrella.git"
	},
	"homepage": "https://github.com/thi-ng/umbrella/tree/develop/packages/rdom-forms#readme",
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/postspectacular"
		},
		{
			"type": "patreon",
			"url": "https://patreon.com/thing_umbrella"
		}
	],
	"author": "Karsten Schmidt (https://thi.ng)",
	"license": "Apache-2.0",
	"scripts": {
		"build": "yarn build:esbuild && yarn build:decl",
		"build:decl": "tsc --declaration --emitDeclarationOnly",
		"build:esbuild": "esbuild --format=esm --platform=neutral --target=es2022 --tsconfig=tsconfig.json --outdir=. src/**/*.ts",
		"clean": "rimraf --glob '*.js' '*.d.ts' '*.map' doc",
		"doc": "typedoc --excludePrivate --excludeInternal --out doc src/index.ts",
		"doc:ae": "mkdir -p .ae/doc .ae/temp && api-extractor run --local --verbose",
		"doc:readme": "bun ../../tools/src/module-stats.ts && bun ../../tools/src/readme.ts",
		"pub": "yarn npm publish --access public",
		"test": "bun test"
	},
	"dependencies": {
		"@thi.ng/api": "^8.9.14",
		"@thi.ng/checks": "^3.4.14",
		"@thi.ng/defmulti": "^3.0.12",
		"@thi.ng/hiccup-html": "^2.3.3",
		"@thi.ng/rdom": "^0.13.7",
		"@thi.ng/rstream": "^8.2.17"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.38.3",
		"esbuild": "^0.19.8",
		"rimraf": "^5.0.5",
		"typedoc": "^0.25.4",
		"typescript": "^5.3.2"
	},
	"keywords": [
		"browser",
		"component",
		"declarative",
		"dom",
		"form",
		"hiccup",
		"html",
		"rdom",
		"rstream",
		"reactive",
		"typescript",
		"ui"
	],
	"publishConfig": {
		"access": "public"
	},
	"browser": {
		"process": false,
		"setTimeout": false
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"./*.js",
		"./*.d.ts"
	],
	"exports": {
		".": {
			"default": "./index.js"
		},
		"./api": {
			"default": "./api.js"
		},
		"./compile": {
			"default": "./compile.js"
		}
	},
	"thi.ng": {
		"parent": "@thi.ng/rdom",
		"related": [
			"rdom-components"
		],
		"status": "alpha",
		"year": 2023
	}
}
