		"@thi.ng/shader-ast-stdlib": "^0.18.1",
		"@thi.ng/transducers": "^8.9.11",
		"@thi.ng/vector-pools": "^3.1.115",
		"@thi.ng/vectors": "^7.10.17"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.40.1",
		"esbuild": "^0.20.0",
		"rimraf": "^5.0.5",
		"typedoc": "^0.25.7",
		"typescript": "^5.3.3"
	},
	"keywords": [
		"2d",
